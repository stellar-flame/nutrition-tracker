FROM python:3.11-slim

# Helpful defaults for containers
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

WORKDIR /backend

# (Optional) system deps that commonly come up; keep minimal
# RUN apt-get update && apt-get install -y --no-install-recommends \
#     curl \
#   && rm -rf /var/lib/apt/lists/*

# Copy only dependency files first so Docker can cache pip install
COPY requirements.txt requirements-dev.txt ./

# Upgrade pip tooling and install deps
RUN python -m pip install --upgrade pip setuptools wheel \
 && pip install --no-cache-dir -r requirements-dev.txt

# IMPORTANT: don't COPY the rest of your code in dev.
# docker-compose bind-mounts your source into /backend, so changes are instant.

# No CMD here; docker-compose provides the command for api/poller